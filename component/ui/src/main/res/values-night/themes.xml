<resources>
	<!-- Night theme -->
	<style name="Theme.GraduateThesis" parent="Theme.MaterialComponents.DayNight.NoActionBar">

		<!-- Primary brand color -->
		<item name="colorPrimary">@color/blue_400</item>
		<item name="colorPrimaryVariant">@color/blue_900</item>
		<item name="colorOnPrimary">@color/black</item>

		<!-- Secondary brand color -->
		<item name="colorSecondary">@color/blue_200</item>
		<item name="colorSecondaryVariant">@color/blue_400</item>
		<item name="colorOnSecondary">@color/black</item>

		<!-- Status bar -->
		<item name="android:statusBarColor">?attr/colorSurface</item>

		<!-- Bottom sheet -->
		<item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

		<!-- Other -->
		<item name="colorIconTint">@color/grey_100</item>
		<item name="colorButtonTint">@color/button_background_color</item>
		<item name="colorProgressBarTint">@color/blue_600</item>
		<item name="colorSwipeIndicatorTint">@color/grey_300</item>

		<item name="colorGreyVariant">@color/grey_500</item>
		<item name="colorBlueVariant">@color/blue_600</item>

		<item name="colorBackgroundGreenTint">@color/green_300_alpha_60</item>
		<item name="colorBackgroundRedTint">@color/red_300_alpha_60</item>
		<item name="colorBackgroundYellowTint">@color/yellow_300_alpha_60</item>
		<item name="colorBackgroundGreyTint">@color/grey_300_alpha_40</item>

		<item name="colorBackgroundStateTint">@color/grey_500_alpha_50</item>
	</style>

</resources>