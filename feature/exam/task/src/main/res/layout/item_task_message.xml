<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="@dimen/margin_padding_20"
	android:layout_marginVertical="@dimen/margin_padding_10"
	android:orientation="vertical">

	<TextView
		android:id="@+id/messageAuthor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size_16"
		android:textStyle="bold"
		tools:text="Романов Евгений" />

	<LinearLayout
		android:id="@+id/artefactContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginVertical="@dimen/margin_padding_5"
		android:layout_marginTop="@dimen/margin_padding_3"
		android:background="@drawable/shape_task_message_artefact"
		android:orientation="horizontal"
		android:paddingHorizontal="@dimen/margin_padding_8"
		android:paddingVertical="@dimen/margin_padding_8"
		android:visibility="gone"
		tools:visibility="visible">

		<ImageView
			android:id="@+id/artefactIcon"
			android:layout_width="@dimen/artefact_size"
			android:layout_height="@dimen/artefact_size"
			android:layout_gravity="center_vertical"
			android:importantForAccessibility="no"
			android:visibility="gone"
			tools:src="@drawable/ic_artefact_pdf"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/artefactName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:ellipsize="end"
			android:maxLines="1"
			android:paddingHorizontal="@dimen/margin_padding_5"
			android:singleLine="true"
			android:textSize="@dimen/font_size_16"
			android:visibility="gone"
			tools:text="АВТ-815 Иванов Вопрос 14.pdf"
			tools:visibility="visible" />

	</LinearLayout>

	<TextView
		android:id="@+id/messageText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:autoLink="all"
		android:linksClickable="true"
		android:textColorLink="?android:attr/textColorSecondary"
		android:visibility="gone"
		tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
		tools:visibility="visible" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="end"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/artefactType"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_2"
			android:layout_marginEnd="@dimen/margin_padding_5"
			android:textSize="@dimen/font_size_10"
			android:visibility="gone"
			tools:ignore="SmallSp"
			tools:text="14 МБ • PNG"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/messageTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_2"
			android:textSize="@dimen/font_size_10"
			tools:ignore="SmallSp"
			tools:text="10:30" />

	</LinearLayout>

</LinearLayout>